<main>
<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
<br>        
        

        <%= render "book" , book: @book %>

      <div class="row">
       <%= link_to  edit_user_path(@user.id),class: "btn btn-outline-secondary btn-block"  do %>
        <i class="fas fa-user-cog"></i><% end %>

      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @books, url: books_path do |f| %>
      <div class="form-group">
          <label for="book_title">Title </label><br>
          <%= f.text_field :title , class: "form-control"%>
        </div>

        <div class="form-group">
          <label for="book_opinion">Opinion</label><br>
          <%= f.text_area :body  , class: "form-control"%>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book' , class: "btn btn-success"%>
        </div>
      <% end %>
      </div>





     <div class="col-md-8  offset-md-1" >
<br>       
       
     <h2>Book detail</h2>
     <table class="table">
       <tbody>
        <td><%= link_to user_path(@book.user.id) do %>
        <%= image_tag @book.user.get_profile_image(80,80) %><br>
        <%= @book.user.name %>
        <% end %></td>
        <td><%=link_to @book.title , book_path(@book.id) %></td>

        <td><%= @book.body %></td>
        <% if @book.user == current_user %>
        <td><%= link_to "Edit" ,  edit_book_path(@book.id) , class: "btn btn-success"%></td>
        <td><%= link_to "Destroy" , book_path(@book.id),method: :delete , "data-confirm" => "本当に消しますか？" , class: "btn btn-sm btn-danger" %></td>
        <% end %>



      </tbody>
     </table>
   </div>
  </div>
 </div>
</main>