<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
<br>          

       <%= render "user.info" , user: @user %>




      <div class="row">
       <%= link_to  edit_user_path(current_user.id),class: "btn btn-outline-secondary btn-block"  do %>
        <i class="fas fa-user-cog"></i><% end %>

      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, url: books_path do |f| %>
      <div class="form-group">
          <label for="book_title">Title </label><br>
          <%= f.text_field :title , class: "form-control"%>
        </div>

        <div class="form-group">
          <label for="book_opinion">Opinion</label><br>
          <%= f.text_area :body  , class: "form-control"%>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book' , class: "btn btn-success"%>
        </div>
      <% end %>
      </div>


      <div class="col-md-8  offset-md-1" >
<br>          
          
       <h2>Users</h2>
         <table class="table">
            <thead>
            <tr>

            <th>image</th>
            <th>name</th>
            <th colspan ="3"></th>
             </tr>
          </thed>

          <% @users.each do |user| %>
          <tbody>
          <tr>

          <th><%= image_tag user.get_profile_image(80,80) %></th>

          <th><%= user.name %></th>
          <th><%= link_to "Show", user_path(user.id) %></th>

          </tr>
          </tbody>
          <% end %>



         </table>
      </div>
  </div>
 </div>
</main>